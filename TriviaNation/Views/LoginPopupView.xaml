        xmlns:local="clr-namespace:TriviaNation.Views"
        mc:Ignorable="d"
        Title="LoginPopupView" Height="450" Width="250">
    <Grid>
        <RadioButton Content="Instructor" GroupName="UserType" Name="Admin" HorizontalAlignment="Left" Margin="84,149,0,0" VerticalAlignment="Top"/>
